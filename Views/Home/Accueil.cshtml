                    }
                </div>
            }
            else
            {
                <p>Aucune recette disponible. <a asp-controller="Recette" asp-action="Creer">Ajoutez-en une !</a></p>
            }
        </section>*@
    </main>

    <footer class="footer">
        <div class="icons-wrapper">
            <a href="#"><i class="fab fa-twitter"></i></a>
            <a href="#"><i class="fab fa-facebook"></i></a>
            <a href="#"><i class="fab fa-instagram"></i></a>
        </div>
        <nav class="footer-nav">
            <ul>
                <li><a asp-controller="Home" asp-action="Index">Accueil</a></li>
                <li><a asp-controller="Recette" asp-action="Index">Recettes</a></li>
                <li><a asp-controller="Recette" asp-action="MesRecettes">Mes Recettes</a></li>

@model Utilisateur
@{
    Layout = "_LayoutSpecial";
}
<main id="login-page">
<div class="auth-container" id="auth-container">
    <div id="login-form">
            @if (TempData["ValidateMessage"] != null)
            {
            <p class="text-black">
                @TempData["ValidateMessage"]</p>
            }

        <h1>Connexion</h1>
        <form asp-controller="Access" asp-action="SignIn" method="post">
            <label asp-for="email">Adresse e-mail :</label>
            <input asp-for="email" placeholder="Entrez votre e-mail" required>
            <span asp-validation-for="email" class="text-danger"></span>

            <label asp-for="password">Mot de passe :</label>
            <input asp-for="password" type="password" placeholder="Entrez votre mot de passe" required>
            <span asp-validation-for="password" class="text-danger"></span>

            @if (Context.Request.Query.ContainsKey("ReturnURL"))
            {
                <input type="hidden" name="ReturnURL" value="@Context.Request.Query["ReturnURL"]">
            }

                <input type="submit" value="Connexion">

            @if (ViewData["ValidateMessage"] != null)
            {
                <p class="text-danger">@ViewData["ValidateMessage"]</p>
            }
        </form>
        <div class="toggle">
            Vous n'avez pas de compte ?
            <a asp-action="SignUp">Inscrivez-vous</a>
        </div>
    </div>
</div>
</main>


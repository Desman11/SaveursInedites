<!DOCTYPE html> <!-- Déclaration du type de document HTML5 -->
<html lang="fr"> <!-- Début de la page HTML avec la langue définie sur le français -->
<head>
	<meta charset="utf-8" /> <!-- Encodage des caractères en UTF-8 -->
	<meta name="viewport" content="width=device-width, initial-scale=1.0" /> <!-- Responsive design pour s'adapter à tous les écrans -->
	<title>@ViewData["Title"] - SaveursInedites</title> <!-- Titre dynamique de la page -->
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" /> <!-- Inclusion de Bootstrap (via LibMan) -->
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" /> <!-- Feuille de style personnalisée avec versioning -->
	<link rel="stylesheet" href="~/SaveursInedites.styles.css" asp-append-version="true" /> <!-- Feuille de style spécifique au projet -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"> <!-- FontAwesome pour les icônes -->
	<title>Accueil</title> <!-- Titre statique de secours -->
</head>
<body>
	<div! class="background-container"> <!-- ERREUR : "div!" est invalide (probablement une faute de frappe) -->
		<header> <!-- Début de l'en-tête -->
			<div class="logo_wrapper"> <!-- Conteneur du logo -->
				<partial name="_CookieConsentPartial" /> <!-- Inclusion du bandeau de consentement aux cookies -->
				<div class="q_logo"><span>Saveurs Inédites</span></div> <!-- Affichage du logo/nom du site -->
			</div>

			<!-- Menu -->
			<nav class="menu" id="myMenu"> <!-- Barre de navigation principale -->
				<button class="menu-toggle" onclick="toggleMenu()">☰</button> <!-- Bouton hamburger pour les petits écrans -->
				<ul>
					@* <li><a href="./accueil.html">Accueil</a></li> *@ <!-- Lien HTML commenté -->
					<li class="nav-item">
						<a asp-area="" asp-controller="Home" asp-action="Index">Home</a> <!-- Lien vers l'accueil -->

					<li class="nav-item">
					<a asp-area="" asp-controller="Recettes" asp-action="PageRecherche">Recherche</a> <!-- Lien vers la recherche -->

					<li class="nav-item">
						<a asp-area="" asp-controller="Recettes" asp-action="Index">Detail</a> <!-- Lien vers les détails de recettes -->

					<li class="nav-item">
						<a asp-area="" asp-controller="Recettes" asp-action="nouveau">Ajout</a> <!-- Lien vers l'ajout de recette -->

					<li class="nav-item">
						<a asp-area="" asp-controller="Recettes" asp-action="Index">Modifier</a> <!-- (Répétition d’Index ici) -->
										@if (User.IsInRole("admin")) @*<!-- Bloc visible uniquement si l'utilisateur est admin -->*@
					{
						<li class="nav-item">
							<a asp-area="" asp-controller="Utilisateurs" asp-action="Index">Administration</a> <!-- Lien vers l'administration -->
						</li>
					}

					<li class="dropdown compte">
						<a href="#" class="dropbtn" onclick="submitLogoutForm(event)"> <!-- Bouton de déconnexion -->
							<!-- Icône utilisateur SVG -->
							<svg xmlns="http://www.w3.org/2000/svg" width="34" height="34" viewBox="0 0 24 24">
								<path fill="#fff" d="..."/> <!-- Icône d'utilisateur stylisée -->
							</svg>
						</a>
						<form id="logoutForm" action="/Access/LogOut" method="post" style="display: none;">
							<!-- Formulaire de déconnexion caché -->
						</form>
					</li>

					<script>
						function submitLogoutForm(event) {
							event.preventDefault(); // Empêche la navigation
							document.getElementById('logoutForm').submit(); // Soumet le formulaire
						}
					</script>
				</ul>
			</nav>
		</header>

		<div class="main-content"> <!-- Conteneur principal -->
			<div class="title_subtitle_holder"> <!-- Titre de la page -->
				<h1>@ViewData["titrePage"]</h1> <!-- Titre dynamique -->
			</div>
		</div>

		<main role="main" class=""> <!-- Contenu principal de la page -->
			@RenderBody() <!-- Injection du contenu de la vue -->
		</main>

		<!-- Ajout d'une autre version de FontAwesome (ancienne version) -->
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

		@* Icônes d'étoiles commentées *@

		<a id="back_to_top" href="#" class="on"> <!-- Bouton retour en haut -->
			<span class="circle">
				<i class="fas fa-arrow-up"></i> <!-- Icône flèche vers le haut -->
			</span>
		</a>

		<!-- Pied de page -->
		<footer class="footer">
			<div class="icons-wrapper"> <!-- Réseaux sociaux -->
				<a href="https://twitter.com/nom_du_compte" target="_blank" rel="noopener">
					<img src="@Url.Content("/icones/pajamas--twitter.svg")" width="36" height="36" alt="X (Twitter)">
				</a>

				<a href="https://facebook.com/nom_du_compte" target="_blank" rel="noopener">
					<img src="@Url.Content("/icones/flowbite--facebook-solid.svg")" width="36" height="36" alt="Facebook">
				</a>

				<a href="https://instagram.com/nom_du_compte" target="_blank" rel="noopener">
					<img src="@Url.Content("/icones/akar-icons--instagram-fill.svg")" width="36" height="36" alt="Instagram">
				</a>
			</div>

			<div class="footer-content"> <!-- Contenu bas de page -->
				<div class="logo_wrapper">
					<div class="q_logo"><span>Saveurs Inédites</span></div>
				</div>

				<nav class="menubas"> <!-- Menu bas de page -->
					<ul>
						<li class="nav-item">
							<a asp-area="" asp-controller="Home" asp-action="Index">Home</a>
						<li class="nav-item">
							<a asp-area="" asp-controller="Recettes" asp-action="PageRecherche">Recherche</a>
						<li class="nav-item">
							<a asp-area="" asp-controller="Recettes" asp-action="Index">Recettes</a>
						<li class="nav-item">
							<a asp-area="" asp-controller="Recettes" asp-action="nouveau">Ajout</a>

						@if (User.IsInRole("Admin")) @*<!-- Si admin -->*@
						{
							<li class="nav-item">
								<a asp-area="" asp-controller="Utilisateurs" asp-action="Index">Administration</a>
							</li>
						}

						<li class="dropdown compte">
							<a href="#" class="dropbtn" onclick="submitLogoutForm(event)">
								<svg xmlns="http://www.w3.org/2000/svg" width="34" height="34" viewBox="0 0 24 24">
									<path fill="#fff" d="..."/> <!-- Icône utilisateur -->
								</svg>
							</a>
							<form id="logoutForm" action="/Access/LogOut" method="post" style="display: none;">
								<!-- Formulaire caché -->
							</form>
						</li>
					</ul>
				</nav>

				<li class="contact-button">
					<a class="contact-link" asp-area="" asp-controller="Home" asp-action="Contact">Contact</a> <!-- Lien vers la page de contact -->
				</li>
			</div>

			<div class="footer-copyright">
				&copy; 2025 Tous droits réservés. / <a href="/Home/Privacy">Mentions Légales</a> <!-- Mentions légales -->
			</div>
		</footer>

		<!-- Scripts JavaScript -->
		<script src="~/lib/jquery/dist/jquery.min.js"></script> <!-- jQuery -->
		<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script> <!-- Bootstrap JS -->
		<script src="~/js/site.js" asp-append-version="true"></script> <!-- Script personnalisé -->
		@await RenderSectionAsync("Scripts", required: false) <!-- Section scripts supplémentaire facultative -->
</body>
</html>
